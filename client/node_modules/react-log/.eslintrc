{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react",
     "plugin:jest/recommended"
  ],
  "plugins": [
    "babel",
    "jest"
  ],
  "env"     : {
    "es6" : true,
    "browser" : true,
    "jest/globals": true
  },
  "globals" : {
    "API_URL": false
  },
  "rules": {
    "semi" : ["error", "always"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "babel/generator-star-spacing": 1
  }
}
